<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MY.DIALOG"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/m_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/m_10"
            android:text="Add Sensor data"
            android:textColor="@color/white"
            android:textSize="@dimen/s_22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_sensor_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/m_10"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/s_20"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/m_10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_weight="0.5"
                android:text="@string/lbl_alarm_levels"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_low"
                    tools:ignore="Suspicious0dp" />

                <EditText
                    android:id="@+id/edt_alarm_low"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_10"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/m_5"
                    android:text="1"
                    android:textSize="@dimen/s_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_lbl_alarm_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_16"
                    android:layout_weight="0.1"
                    android:text="@string/lbl_High"
                    tools:ignore="Suspicious0dp" />

                <EditText
                    android:id="@+id/edt_alarm_high"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_10"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/m_5"
                    android:text="1"
                    android:textSize="@dimen/s_16"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/m_10"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_weight="0.5"
                android:text="@string/lbl_warning_levels"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_low"
                    tools:ignore="Suspicious0dp" />

                <EditText
                    android:id="@+id/edt_warning_low"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_10"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/m_5"
                    android:text="1"
                    android:textSize="@dimen/s_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_lbl_warning_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_16"
                    android:layout_weight="0.1"
                    android:text="@string/lbl_High"
                    tools:ignore="Suspicious0dp" />

                <EditText
                    android:id="@+id/edt_warning_high"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_10"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_text"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/m_5"
                    android:text="1"
                    android:textSize="@dimen/s_16"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/lbl_repeat_frequency"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:hint="@string/lbl_frequency"
                tools:ignore="Suspicious0dp"
                android:textColorHint="@color/white"
                android:textSize="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_16"
                android:padding="@dimen/m_5">

                <EditText
                    android:id="@+id/edt_hour1"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:background="@drawable/square_edittext"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="@dimen/m_10"
                    android:text="0"
                    android:textColor="@color/white" />

                <requestFocus />

                <EditText
                    android:id="@+id/edt_hour2"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_16"
                    android:background="@drawable/square_edittext"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="@dimen/m_10"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_5"
                    android:layout_marginBottom="-20dp"
                    android:gravity="center"
                    android:padding="@dimen/m_5"
                    android:text="@string/lbl_colon"
                    android:textSize="@dimen/s_20"
                    android:textStyle="bold"
                    tools:ignore="Suspicious0dp"
                    android:textColor="@color/white"/>

                <EditText
                    android:id="@+id/edt_min1"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_5"
                    android:background="@drawable/square_edittext"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="@dimen/m_10"
                    android:text="0"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/edt_min2"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_10"
                    android:background="@drawable/square_edittext"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="@dimen/m_10"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_5"
                    android:layout_marginBottom="-20dp"
                    android:gravity="center"
                    android:padding="@dimen/m_5"
                    android:text="@string/lbl_colon"
                    android:textSize="@dimen/s_20"
                    android:textStyle="bold"
                    tools:ignore="Suspicious0dp"
                    android:textColor="@color/white"/>

                <EditText
                    android:id="@+id/edt_sec1"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_5"
                    android:background="@drawable/square_edittext"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="@dimen/m_10"
                    android:text="0"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/edt_sec2"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="@dimen/m_16"
                    android:background="@drawable/square_edittext"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="@dimen/m_10"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_10"
            android:layout_marginStart="@dimen/m_20"
            android:text="@string/lbl_note"
            tools:ignore="Suspicious0dp"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_alarm_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/m_10"
                android:layout_marginStart="@dimen/m_20"
                android:text="@string/lbl_alarm_levels"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/m_5"
                android:layout_marginStart="@dimen/m_16"
                android:layout_marginTop="@dimen/m_16"
                android:layout_marginEnd="@dimen/m_16">

                <TextView
                    android:id="@+id/txt_alarm_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_16"
                    android:layout_alignParentStart="true"
                    android:text="Low : 0"
                    android:textStyle="bold"
                    tools:ignore="Suspicious0dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_alarm_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/m_16"
                    android:layout_alignParentEnd="true"
                    android:text="High : 0"
                    android:textStyle="bold"
                    tools:ignore="Suspicious0dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_alarm_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m_16"
            android:layout_marginEnd="@dimen/m_30"
            android:gravity="center_horizontal"
            android:text="0"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp"
            android:textColor="@color/light_blue"/>

        <LinearLayout
            android:id="@+id/lin_alarm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_10"
            android:orientation="horizontal">
            <SeekBar
                android:id="@+id/seekBar_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_10"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/custom_thumb"
                android:tooltipText="@string/lbl_warning_levels" />

            <Button
                android:id="@+id/btn_alarm_set"
                android:layout_width="50dp"
                android:layout_height="@dimen/m_50"
                android:background="@drawable/circular_button_primary_dark"
                android:padding="@dimen/m_5"
                android:text="@string/btn_set"
                android:elevation="@dimen/m_16"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/m_20"
                android:gravity="center_horizontal"
                android:text="@string/lbl_warning_levels"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp"
                android:textColor="@color/white"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_16"
                android:layout_marginTop="@dimen/m_16"
                android:layout_marginEnd="@dimen/m_16">

                <TextView
                    android:id="@+id/txt_warning_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_16"
                    android:text="Low : 0"
                    android:textStyle="bold"
                    tools:ignore="Suspicious0dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_warning_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/m_16"
                    android:text="High : 0"
                    android:textStyle="bold"
                    tools:ignore="Suspicious0dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_warning_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m_16"
            android:layout_marginEnd="@dimen/m_30"
            android:gravity="center_horizontal"
            android:text="0"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp"
            android:textColor="@color/light_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_10"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBar_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_16"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/custom_thumb" />

            <Button
                android:id="@+id/btn_warning_set"
                android:layout_width="50dp"
                android:layout_height="@dimen/m_50"
                android:layout_margin="@dimen/m_5"
                android:background="@drawable/circular_button_primary_dark"
                android:padding="@dimen/m_5"
                android:text="@string/btn_set"
                android:elevation="@dimen/m_16"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/m_16"
        android:layout_marginTop="@dimen/m_16"
        android:layout_marginEnd="@dimen/m_16"
        android:layout_marginBottom="@dimen/m_16"
        android:gravity="right"
        android:padding="@dimen/m_5">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/m_10"
            android:gravity="center"
            android:padding="@dimen/m_5"
            android:text="@string/lbl_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/s_20"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/m_20"
            android:gravity="center"
            android:padding="@dimen/m_5"
            android:text="@string/lbl_save"
            android:textColor="@color/white"
            android:textSize="@dimen/s_20"
            android:textStyle="bold"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>
</RelativeLayout>
